class Solution {
    public int longestMountain(int[] arr) {
        int i=1, n = arr.length-1, max = 0;
        while(i < n){
            if(i > 0 && arr[i] > arr[i-1] && arr[i] > arr[i+1]){
                int left = i-1;
                while(left > 0 && arr[left] > arr[left-1]){
                   left--; 
                }
                int right = i+1;
                while(right < n && arr[right] > arr[right+1]){
                    right++;
                }
                max = Math.max(max, right-left+1);
                i = right;
            }else{
                i++;
            }
        }
        return max;
    }
}
